NAME = libftprintf.a
CC = cc
CFLAGS = -Wall -Werror -Wextra

SOURCES = \
	ft_printf.c \
	ft_print_char.c

OBJECTS = $(SOURCES:.c=.o)

HEADERS = libft.h
LIBFT_PATH = libft
LIBFT = $(LIBFT_PATH)/libft.a

all: $(LIBFT) $(NAME)

$(NAME): $(OBJECTS)
	ar rcs $(NAME) $(OBJECTS) $(LIBFT)

$(LIBFT):
	$(MAKE) -C $(LIBFT_PATH)

clean:
		rm -f $(OBJECTS)
		$(MAKE) -C  $(LIBFT_PATH) clean

fclean: clean
		$(MAKE) clean
		rm -rf $(NAME)
		$(MAKE) -C $(LIBFT_PATH) fclean

re: fclean all

.PHONY: all clean fclean re